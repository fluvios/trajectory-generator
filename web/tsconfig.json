{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "Snabbdom.createElement",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "allowJs": true,
    "noStrictGenericChecks": true,
    "typeRoots": [
      "./node_modules/@types"
    ],    
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "./node_modules/@types/**/*.d.ts"
  ]
}